<?xml version="1.0" encoding="UTF-8"?>

<language-addon>
	<addon-name>modeltable</addon-name> <!-- required -->

 	<version>
		<version-class>org.zkoss.experiment.Version</version-class>
		<version-uid>0.8.0</version-uid>
		<zk-version>5.0.5</zk-version><!-- or later -->
	</version>

	<language-name>xul/html</language-name>
	<component>
		<component-name>modeltable</component-name> <!-- required -->
		<component-class>org.zkoss.experiment.Modeltable</component-class> <!-- required -->
		<widget-class>zul.experiment.Modeltable</widget-class> <!-- required -->
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>mold/modeltable.js</mold-uri>

			<!--
			== Tip in advance ==
				You don't have to specify a css.dsp if you need not ,
				but usually you need it.

				You could assign a .css file ,too.

				The css.dsp is almost as same as CSS file ,
				but have more powerful enhancement.	(like EL support.)
			====
			-->
			<css-uri>css/modeltable.css.dsp</css-uri>
		</mold>
	</component>
</language-addon>
